<Page x:Class="Tenurix.Management.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource Panel}">

	<Grid Margin="18">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="14"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="14"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Dashboard" FontSize="22" FontWeight="SemiBold"/>

		<!-- Stat cards -->
		<UniformGrid Grid.Row="2" Columns="4" Margin="0,8,0,0">
			<Border Background="{StaticResource Bg}" CornerRadius="12" Padding="14" Margin="6">
				<StackPanel>
					<TextBlock Text="Pending Property Submissions" Foreground="{StaticResource TextMuted}"/>
					<TextBlock x:Name="PropCountText" Text="0" FontSize="26" FontWeight="SemiBold"/>
				</StackPanel>
			</Border>

			<Border Background="{StaticResource Bg}" CornerRadius="12" Padding="14" Margin="6">
				<StackPanel>
					<TextBlock Text="Pending Lease Apps" Foreground="{StaticResource TextMuted}"/>
					<TextBlock x:Name="LeaseCountText" Text="0" FontSize="26" FontWeight="SemiBold"/>
				</StackPanel>
			</Border>

			<Border Background="{StaticResource Bg}" CornerRadius="12" Padding="14" Margin="6">
				<StackPanel>
					<TextBlock Text="Open Issues" Foreground="{StaticResource TextMuted}"/>
					<TextBlock x:Name="IssueCountText" Text="0" FontSize="26" FontWeight="SemiBold"/>
				</StackPanel>
			</Border>

			<Border Background="{StaticResource Bg}" CornerRadius="12" Padding="14" Margin="6">
				<StackPanel>
					<TextBlock Text="Active Employees" Foreground="{StaticResource TextMuted}"/>
					<TextBlock x:Name="EmpCountText" Text="0" FontSize="26" FontWeight="SemiBold"/>
				</StackPanel>
			</Border>
		</UniformGrid>

		<!-- Recent tables -->
		<Grid Grid.Row="4" Margin="6,10,6,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="12"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="12"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Border Grid.Column="0" Background="{StaticResource Bg}" CornerRadius="12" Padding="12">
				<StackPanel>
					<TextBlock Text="Recent Property Submissions" FontWeight="SemiBold" Margin="0,0,0,8"/>
					<DataGrid x:Name="RecentPropsGrid" AutoGenerateColumns="True" IsReadOnly="True"
                              CanUserAddRows="False" HeadersVisibility="Column"/>
				</StackPanel>
			</Border>

			<Border Grid.Column="2" Background="{StaticResource Bg}" CornerRadius="12" Padding="12">
				<StackPanel>
					<TextBlock Text="Recent Lease Applications" FontWeight="SemiBold" Margin="0,0,0,8"/>
					<DataGrid x:Name="RecentAppsGrid" AutoGenerateColumns="True" IsReadOnly="True"
                              CanUserAddRows="False" HeadersVisibility="Column"/>
				</StackPanel>
			</Border>

			<Border Grid.Column="4" Background="{StaticResource Bg}" CornerRadius="12" Padding="12">
				<StackPanel>
					<TextBlock Text="Recent Issues" FontWeight="SemiBold" Margin="0,0,0,8"/>
					<DataGrid x:Name="RecentIssuesGrid" AutoGenerateColumns="True" IsReadOnly="True"
                              CanUserAddRows="False" HeadersVisibility="Column"/>
				</StackPanel>
			</Border>
		</Grid>
	</Grid>
</Page>
