<Window x:Class="Tenurix.Management.Views.CreateEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Employee"
        Width="520" Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0B1220">

	<Border Padding="22" CornerRadius="18" Background="#111B2D">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="18"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Title -->
			<TextBlock Text="Create New Employee"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="White"/>

			<!-- Form -->
			<StackPanel Grid.Row="2">

				<TextBlock Text="Full Name" Foreground="White" Margin="0,0,0,6"/>
				<TextBox x:Name="FullNameBox" Height="36" Margin="0,0,0,14"/>

				<TextBlock Text="Email" Foreground="White" Margin="0,0,0,6"/>
				<TextBox x:Name="EmailBox" Height="36" Margin="0,0,0,14"/>

				<TextBlock Text="Role" Foreground="White" Margin="0,0,0,6"/>
				<ComboBox x:Name="RoleBox" Height="36" Margin="0,0,0,14">
					<ComboBoxItem Content="Staff"/>
					<ComboBoxItem Content="TeamLead"/>
					<ComboBoxItem Content="AssistantManager"/>
				</ComboBox>

				<TextBlock Text="Temporary Password" Foreground="White" Margin="0,0,0,6"/>
				<PasswordBox x:Name="TempPassBox" Height="36" Margin="0,0,0,10"/>

				<TextBlock x:Name="ErrorText"
                           Foreground="Tomato"
                           TextWrapping="Wrap"
                           Margin="0,6,0,0"/>
			</StackPanel>

			<!-- Buttons -->
			<Grid Grid.Row="3">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="12"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Button x:Name="CancelBtn"
                        Grid.Column="0"
                        Content="Cancel"
                        Height="40"
                        Background="#1B2B45"
                        Foreground="White"
                        Click="Cancel_Click"/>

				<Button x:Name="CreateBtn"
                        Grid.Column="2"
                        Content="Create Employee"
                        Height="40"
                        Background="#C9A24E"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Click="Create_Click"/>
			</Grid>
		</Grid>
	</Border>
</Window>
