<Page x:Class="Tenurix.Management.Views.Pages.LandlordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Landlord Portfolio"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="White"/>

            <DockPanel Margin="0,12,0,0">
                <TextBox x:Name="QueryBox" Height="34" Width="360" Margin="0,0,10,0"/>
                <Button Content="Search" Width="110" Height="34" Click="Search_Click"/>
            </DockPanel>

            <TextBlock x:Name="ErrorText" Foreground="Tomato" Margin="0,10,0,0"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Search results -->
            <DataGrid x:Name="LandlordsGrid"
                      Grid.Column="0"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionChanged="LandlordsGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding UserId}" Width="60"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Props" Binding="{Binding PropertiesCount}" Width="70"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Portfolio -->
            <TabControl Grid.Column="2">
                <TabItem Header="Properties">
                    <DataGrid x:Name="PropsGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
                </TabItem>

                <TabItem Header="Listings">
                    <DataGrid x:Name="ListingsGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
                </TabItem>

                <TabItem Header="Leases">
                    <DataGrid x:Name="LeasesGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
                </TabItem>

                <TabItem Header="Issues">
                    <DataGrid x:Name="IssuesGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Page>
