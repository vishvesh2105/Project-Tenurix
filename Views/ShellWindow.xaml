<Window x:Class="Tenurix.Management.Views.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tenurix Management"
        Width="1100" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Bg}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="{StaticResource Panel2}" Padding="18">
            <StackPanel>

                <!--  Logo area (visible) -->
                <Border Background="{StaticResource Panel}" CornerRadius="12" Padding="12" Margin="0,0,0,18">
                    <Image Source="pack://application:,,,/Assets/Branding/tenurix_logoB.png"
                           Height="60"
                           Stretch="Uniform"/>
                </Border>
                <Button Content="My Profile" Click="MyProfile_Click"/>
                <Button x:Name="DashboardBtn" Content="Dashboard" Click="Dashboard_Click" />
                <Button x:Name="PropsBtn" Content="Property Submissions" Click="Props_Click" />
                <Button x:Name="AppsBtn" Content="Lease Applications" Click="Apps_Click" />
                <Button x:Name="IssuesBtn" Content="Issues" Click="Issues_Click" />
                <Button x:Name="LandlordsBtn" Content="Landlord Portfolio" Click="Landlords_Click" />
                <Button x:Name="EmployeesBtn" Content="Employees" Click="Employees_Click" />

                <Button Content="Change Password" Click="ChangePassword_Click" />
                <Separator Margin="0,14,0,14"/>
                <Button x:Name="LogoutBtn" Content="Logout" Click="Logout_Click"/>


            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Column="1" Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="14"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <Border Background="{StaticResource Panel}" CornerRadius="14" Padding="14">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Left">
                        <TextBlock x:Name="UserText" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock x:Name="RoleText" Foreground="{StaticResource TextMuted}" Margin="0,4,0,0"/>
                    </StackPanel>

                    <TextBlock x:Name="PageTitleText"
                               DockPanel.Dock="Right"
                               Text="Dashboard"
                               FontSize="14"
                               Foreground="{StaticResource TextMuted}"
                               HorizontalAlignment="Right"/>
                </DockPanel>
            </Border>

            <!--  Frame host -->
            <Border Grid.Row="2" Background="{StaticResource Panel}" CornerRadius="14" Padding="0">
                <Frame x:Name="MainFrame"
                       NavigationUIVisibility="Hidden"
                       Background="{StaticResource Panel}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
