<Window x:Class="Tenurix.Management.Views.Windows.MyProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Profile"
        Height="620"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0F172A">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="My Profile"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,0,0,16"/>

        <!-- Content Card -->
        <Border Grid.Row="1"
                Background="#111827"
                CornerRadius="14"
                Padding="18" Margin="0,0,0,10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Full Name -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Full Name"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,12,12"/>

                <TextBox Grid.Row="0" Grid.Column="1"
                         x:Name="FullNameBox"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="#3A7AFE"
                         BorderThickness="1.5"
                         Padding="10,8"
                         Height="38"
                         Margin="0,0,0,12"/>

                <!-- Phone -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Phone"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,12,12"/>

                <TextBox Grid.Row="1" Grid.Column="1"
                         x:Name="PhoneBox"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="#3A7AFE"
                         BorderThickness="1.5"
                         Padding="10,8"
                         Height="38"
                         Margin="0,0,0,12"/>

                <!-- Job Title -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Job Title"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,12,12"/>

                <TextBox Grid.Row="2" Grid.Column="1"
                         x:Name="JobTitleBox"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="#3A7AFE"
                         BorderThickness="1.5"
                         Padding="10,8"
                         Height="38"
                         Margin="0,0,0,12"/>

                <!-- Department -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Department"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,12,12"/>

                <TextBox Grid.Row="3" Grid.Column="1"
                         x:Name="DepartmentBox"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="#3A7AFE"
                         BorderThickness="1.5"
                         Padding="10,8"
                         Height="38"
                         Margin="0,0,0,12"/>

                <!-- Photo -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="Profile Photo"
                           Foreground="White"
                           VerticalAlignment="Top"
                           Margin="0,0,12,12"/>

                <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,0,0,12">
                    <Border Width="160"
                            Height="160"
                            CornerRadius="12"
                            BorderThickness="1"
                            BorderBrush="#3A7AFE"
                            Background="#0B1220"
                            Margin="0,0,0,10">
                        <Grid>
                            <Image x:Name="PhotoImage" Stretch="UniformToFill"/>
                            <TextBlock x:Name="NoPhotoText"
                                       Text="No photo"
                                       Foreground="Gray"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Button Content="Choose Photo..."
                            Width="160"
                            Padding="10,7"
                            Background="#3A7AFE"
                            Foreground="White"
                            BorderThickness="0"
                            Click="ChoosePhoto_Click"/>
                </StackPanel>

                <!-- Email -->
                <TextBlock Grid.Row="5" Grid.Column="0"
                           Text="Email"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Row="5" Grid.Column="1"
                           x:Name="EmailText"
                           Foreground="LightGray"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,18,0,0">

            <Button Content="Cancel"
                    Width="110"
                    Height="38"
                    Margin="0,0,12,0"
                    Background="#1F2937"
                    Foreground="White"
                    BorderThickness="0"
                    Click="Cancel_Click"/>

            <Button Content="Save"
                    Width="110"
                    Height="38"
                    Background="#22C55E"
                    Foreground="White"
                    BorderThickness="0"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
